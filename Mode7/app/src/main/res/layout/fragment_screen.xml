<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ScreenFragment">

    <data>
        <variable
            name="screenFragment"
            type="com.example.android.mode7.ScreenFragment" />

        <variable
            name="mode7ViewModel"
            type="com.example.android.mode7.model.Mode7ViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/fragment_screen"
            android:imageBitmap="@{mode7ViewModel.clippedimage}" />

    </FrameLayout>

</layout>